<AnchorPane prefHeight="541.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label fx:id="header_label" layoutX="216.0" layoutY="14.0" text="&lt;Product&gt; Reviews">
         <font>
            <Font name="System Bold Italic" size="18.0" />
         </font>
      </Label>
      <ListView fx:id="reviews_listview" layoutX="45.0" layoutY="54.0" onMouseClicked="#handleCommentClick" prefHeight="251.0" prefWidth="512.0" />
      <Rating fx:id="rating_stars" layoutX="45.0" layoutY="329.0" onMouseClicked="#stars_clicked" prefHeight="32.0" prefWidth="240.0" rating="5.0" />
      <TextArea fx:id="comment_textarea" layoutX="45.0" layoutY="372.0" prefHeight="119.0" prefWidth="321.0" />
      <Button fx:id="leave_review_button" layoutX="399.0" layoutY="403.0" mnemonicParsing="false" prefHeight="39.0" prefWidth="129.0" text="Leave Review" />
   </children>
</AnchorPane>
